<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700">

    <ImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/maleavatar"
        android:layout_marginTop="100dp">

    </ImageView>

 <TextView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:text="Profile"
        android:paddingBottom="10dp"

        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:textColor="@color/white"
        android:gravity="left"
        android:layout_marginLeft="150dp"
        android:textSize="20sp"
        android:paddingBottom="10dp"

        android:text="Name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adrian "
        android:id="@+id/realnameTextView"
        android:layout_below="@+id/profile"
        android:gravity="right"
        android:layout_marginLeft="210dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:textColor="@color/white"
        android:layout_marginLeft="170dp"
        android:paddingBottom="10dp"
        android:textSize="20sp"
        android:text="age"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:id="@+id/realageTextView"
        android:layout_below="@+id/name"
        android:gravity="right"
        android:layout_marginLeft="210dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@+id/age"
        android:layout_marginLeft="150dp"
        android:paddingBottom="15dp"
        android:textSize="20sp"
        android:text="location"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/reallocTextView"
        android:layout_below="@+id/age"
        android:gravity="right"
        android:layout_marginLeft="220dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/preference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@+id/location"
        android:layout_marginLeft="140dp"
        android:paddingBottom="15dp"
        android:textSize="20sp"
        android:text="Phone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456789 "
        android:id="@+id/realprefTextView"
        android:layout_below="@+id/location"
        android:gravity="right"
        android:layout_marginLeft="200dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/viewbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/realprefTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="37dp"
        android:background="@color/purple_500"
        android:text="view games"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/webbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preference"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="89dp"
        android:background="@color/purple_500"
        android:textAllCaps="false"
        android:text="go to web page"
        android:textColor="@color/white" />


</RelativeLayout>